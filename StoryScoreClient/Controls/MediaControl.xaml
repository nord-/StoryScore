<UserControl xmlns:Utils="clr-namespace:StoryScore.Client.Controls.Utils"  x:Class="StoryScore.Client.Controls.MediaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:StoryScore.Client.Controls"
             xmlns:my="clr-namespace:StoryScore.Client"
             mc:Ignorable="d" d:DesignStyle="{StaticResource DesignTimeStyle}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label Content="Folder" VerticalAlignment="Center" />
            <!--<TextBox x:Name="FilesFolder" Height="22" Width="250" />
            <Button Content="..." Width="20" Height="22" Click="FolderPathButton_Click" />-->
            <Utils:FolderEntry Text="{Binding Path=FolderPath}" Width="250" Height="22" Description="Folder" />
        </StackPanel>
        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Hidden">
            <StackPanel x:Name="ButtonsStackPanel" />
        </ScrollViewer>
    </Grid>
</UserControl>
