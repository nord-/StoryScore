<UserControl x:Class="StoryScore.Client.Controls.FileTransferControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:StoryScore.Client.Controls"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="400">
    <StackPanel Orientation="Horizontal" >
        <Label Content="File name:" VerticalAlignment="Center"/>
        <TextBox x:Name="FileNameTextBox" Width="250" />
        <Button Content="..." Margin="0,0,10,0" Click="OpenFileButton_Click"/>
        <Button Content="Send" Width="70" Click="SendButton_Click" />
    </StackPanel>
</UserControl>
