<Window x:Class="StoryScoreClient.InputTimeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoryScoreClient"
        xmlns:wpfx="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="New time" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="New time:" Margin="5,5" VerticalAlignment="Center"/>
        <wpfx:MaskedTextBox Width="40" Height="20" Mask="000:00" TextAlignment="Center" Margin="5,5" x:Name="TimeTextBox" />
        <Button Content="OK" IsDefault="True" Width="75" Height="22" Margin="5,5" Click="OkButton_Click" />
        <Button Content="Cancel" IsCancel="True" Width="75" Height="22" Margin="0,5,5,5" Click="CancelButton_Click"/>
    </StackPanel>
</Window>
